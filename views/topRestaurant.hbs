{{>menu}}

<h1>人氣餐廳</h1>
<hr />

{{#each restaurants}}
  <div class="card">
    <div class="row">
      <div class="col-md-4">
        <img src="{{this.image}}" width="200px" height="200px">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title">{{this.name}}</h2>
          <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <a href="/restaurants/{{this.id}}"><button type="button" class="btn btn-primary">Show</button></a>
          {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-danger">移除最愛</button></form>
          {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-primary">加到最愛</button></form>
          {{/if}}

          {{#if this.isLiked}}
            <form action="/like/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-danger">Unlike</button></form>
          {{else}}
            <form action="/like/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-primary">Like</button></form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/each}}