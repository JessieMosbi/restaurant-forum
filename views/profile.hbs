<div class="row">
  <div class="col-md-6 m-auto text-center">
    <div class="card">
      <img class="card-img-top img-fluid w-50 m-auto"
        src="https://assets-lighthouse.alphacamp.co/uploads/user/photo/2538/thumb_24210202_1767397713279715_5652018142706754089_o.jpg"
        alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{profileUser.name}}</h5>
        <p class="card-text">{{profileUser.email}}</p>
        {{#ifCond user.id profileUser.id}}
          <a href="/users/{{profileUser.id}}/edit" class="btn btn-primary">edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>